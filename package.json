{
  "name": "circuitexp1",
  "description": "London Metro Map style disk folder visualizer (Electron + React + PixiJS)",
  "author": "Paulo",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite --port 5175 --strictPort",
    "start": "cross-env VITE_DEV_PORT=5175 electron electron-main.cjs",
    "dev:all": "cross-env VITE_DEV_PORT=5175 concurrently -k -n VITE,ELECTRON -c cyan,magenta \"vite --port 5175 --strictPort\" \"wait-on http://localhost:5175 && cross-env DEV_FORCE_URL=1 electron electron-main.cjs\"",
    "dev:auto": "node scripts/dev-launch.cjs",
    "dev:api": "node scripts/dev-launch-api.cjs",
    "dev:electron": "cross-env VITE_DEV_PORT=5175 DEV_FORCE_URL=1 electron electron-main.cjs",
    "build:ui": "vite build",
    "build": "npm run build:ui",
    "build:icons": "node scripts/gen-icons.cjs",
    "dist": "npm run build:icons && npm run build:ui && electron-builder",
    "dist:win": "npm run build:icons && npm run build:ui && electron-builder --win --x64",
    "audit:licenses": "npx license-checker --summary --json > licenses-summary.json",
    "audit:vulns": "npm audit --json > npm-audit.json",
    "audit:report": "node scripts/generate-audit-report.cjs",
    "health": "node scripts/health-check.cjs",
    "health:electron": "node scripts/health-check.cjs --electron",
    "test": "vitest run --exclude=tests/e2e/**",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "coverage:ci": "vitest run --coverage --exclude=tests/e2e/** && node scripts/check-coverage.cjs",
    "perf:tree": "tsx scripts/stress-tree.ts",
    "perf:leak": "node --expose-gc ./node_modules/tsx/dist/cli.mjs scripts/perf-leak.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.cjs,.mjs --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.cjs,.mjs --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "husky",
    "plugin:create": "node src/plugins/development/scaffolding.js",
    "plugin:validate": "tsx src/plugins/deployment/deploy.ts validate",
    "plugin:deploy": "tsx src/plugins/deployment/deploy.ts deploy",
    "plugin:rollback": "tsx src/plugins/deployment/deploy.ts rollback",
    "plugin:history": "tsx src/plugins/deployment/deploy.ts history",
    "plugin:test": "vitest run src/plugins --config vitest.config.plugins.ts",
    "plugin:dev": "concurrently \"vite build --watch\" \"tsx src/plugins/deployment/deploy.ts deploy local\""
  },
  "dependencies": {
    "d3": "^7.9.0",
    "pixi.js": "^8.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/react": "^16.3.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.5.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.4",
    "electron-builder": "^24.13.3",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "sharp": "^0.33.4",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.circuitexp1.app",
    "productName": "CircuitExp1",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.cjs",
      "scan-manager.cjs",
      "favorites-store.cjs",
      "recent-scans-store.cjs",
      "user-settings-store.cjs",
      "mock-root/**/*"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "electron-main.cjs"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "certificateFile": "${WIN_CSC_LINK}",
      "certificatePassword": "${WIN_CSC_KEY_PASSWORD}",
      "publisherName": "Paulo",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "${CSC_NAME}"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
